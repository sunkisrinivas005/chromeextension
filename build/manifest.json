{
  "manifest_version": 2,
  "name": "Advertiser Tracking Tool",
  "description": "Advertiser Tracking Tool",
  "version": "1.0.1",
  "homepage_url": "https://flexoffers.com",
  "icons": {
    "16": "flex16.png",
    "48": "flex48.png",
    "128": "flex128.png"
  },
  "browser_action": {
    "default_icon": "flex48.png",
    "default_title": "Advertiser Tracking Tool"
  },
  "background": {
    "persistent": true,
    "scripts": ["./jquery.js", "background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js": [
      "./content.js",
      "./jquery.js"
    ],
    "run_at": "document_end"
  }],
  "permissions": [
    "activeTab",
    "contextMenus",
    "cookies",
    "history",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "index.html",
    "/static/*"
  ]
}
